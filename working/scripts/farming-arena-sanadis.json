      "condition": {
        "is": "CALL", "value": "@isBattleReady",
        "and": [{
          "is": "EQUAL", "value": "1", "var":"stage"}, {
          "is": "CALL", "value": "@isUnitReady", "args": {"index": "${index_lilith}"} }, {
          "is": "CALL", "value": "@isUnitMpReady", "args": {"index": "${index_lilith}"} }, {
          "not": "CALL", "value": "@isUnitActionReady", "args": {"index": "${index_lilith}"} }
        ]
      },
      "actions": [{
        "type": "CALL", "value": "@lilith-midnight", "args": {"index": "${index_lilith}"}}, {
        "type": "ADD", "value": "1", "var": "stage"}, {
        "type": "CALL", "value": "@keepAlive"}, {
        "type": "REPEAT"}
      ]
    }, {

      // --------------------------------------------------------------- //
      // -------------------------- Orlandeau -------------------------- //
      // --------------------------------------------------------------- //
