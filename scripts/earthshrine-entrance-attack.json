{
  "vars": [
    {
      "name": "setup",
      "value": "0",
      "type": "INT"
    },
    {
      "name": "runs",
      "display": "Battles",
      "value": "0",
      "type": "INT",
      "modify":"VISIBLE"
    }
  ],
  "includes": [
    "common-no_op",
    "common-menu_location",
    "common-menu_results",
    "common-battle"
  ],
  "states": {

    "main": {
      "name": "Main",
      "includes": [
        "_es-to_results",
        "_es-to_menu",
        "_es-to_battle",
        "_common-no_op"
      ]
    },

    "menu": {
      "name": "Menu",
      "includes": [
        "_common-screen_saver",
        "_common-ml-mission_2",
        "_common-ml-goals",
        "_common-ml-friend_0",
        "_common-ml-friend_none",
        "_common-ml-depart",
        "_es-menu",
        "_common-no_op"
      ]
    },

    "_es-menu": {
      "name": "Menu Ending Include",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "LAP",
              "value": "BATTLE"
            },
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "MSG",
              "value": "Starting run ${runs}"
            },
            {
              "type": "SWAP",
              "value": "battle"
            }
          ]
        }
      ]
    },

    "battle": {
      "name": "Battle",
      "includes": [
        "_common_battle-three_attack",
        "_common-screen_saver",
        "_es-from_battle_to_results",
        "_common-no_op"
      ]
    },

    "_es-from_battle_to_results": {
      "name": "From Battle To Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-results-points",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-results-units"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-items"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "2"
            },
            {
              "type": "SWAP",
              "value": "results"
            }
          ]
        }
      ]
    },

    "_es-to_results": {
      "name": "To Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-results-points",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-results-units"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-items"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "SWAP",
              "value": "results"
            }
          ]
        }
      ]
    },

    "results": {
      "name": "Results",
      "includes": [
        "_common-screen_saver",
        "_common_mr-points",
        "_common_mr-units",
        "_common_mr-items",
        "_common_mr-friend_request",
        "_es-to_menu",
        "_common-no_op"
      ]
    },

    "_es-to_menu": {
      "name": "To Menu",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-missions-select",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-goal_list"
              },
              {
                "is": "SCREEN",
                "value": "menu-friend_select"
              },
              {
                "is": "SCREEN",
                "value": "menu-friend_select-empty"
              },
              {
                "is": "SCREEN",
                "value": "menu-depart"
              }
            ]
          },
          "actions": [
            {
              "type": "MSG",
              "value": "Ending run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "menu"
            }
          ]
        }
      ]
    },

    "_es-to_battle": {
      "name": "To Battle",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "LAP",
              "value": "BATTLE"
            },
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "MSG",
              "value": "Starting run ${runs}"
            },
            {
              "type": "SWAP",
              "value": "battle"
            }
          ]
        }
      ]
    },

    "_es-reset": {
      "name": "Earthshrine - Reset",
      "statements": [
        {
          "condition": {
            "is": "BOOLEAN",
            "value": "true"
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "setup"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "runs"
            }
          ]
        }
      ]
    },

    "reset": {
      "name": "Common - Reset",
      "includes": [
        "_es-reset",
        "_common_mr-reset",
        "_common-reset"
      ]
    }

  }
}