    "main": {
      "name": "Main",
      "includes": [
        "_to_results",
        "_to_menu",
        "_to_battle",
        "_common-no_op"
      ]
    },

    "menu": {
      "name": "Menu",
      "includes": [
        "_common-screen_saver",
        "_common-ml-mission_2",
        "_common-ml-goals",
        "_common-ml-friend_0",
        "_common-ml-depart",
        "_menu",
        "_common-no_op"
      ]
    },

    "_menu": {
      "name": "Menu Ending Include",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "TIMER",
              "value": "BATTLE"
            },
            {
              "type": "SET",
              "var": "loops",
              "value": "0"
            },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "MSG",
              "value": "Starting run ${runs}"
            },
            {
              "type": "SWAP",
              "value": "battle"
            }
          ]
        }
      ]
    },

