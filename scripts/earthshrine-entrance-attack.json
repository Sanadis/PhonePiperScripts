    "_to_menu": {
      "name": "To Menu",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-missions-select",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-goal_list"
              },
              {
                "is": "SCREEN",
                "value": "menu-friend_select"
              },
              {
                "is": "SCREEN",
                "value": "menu-depart"
              }
            ]
          },
          "actions": [
            {
              "type": "MSG",
              "value": "Ending run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "menu"
            }
          ]
        }
      ]
    },

    "_to_battle": {
      "name": "To Battle",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "TIMER",
              "value": "BATTLE"
            },
            {
              "type": "SET",
              "var": "loops",
              "value": "0"
            },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "MSG",
              "value": "Starting run ${runs}"
            },
            {
              "type": "SWAP",
              "value": "battle"
            }
          ]
        }
      ]
    },

    "reset": {
      "name": "Common - Reset",
      "includes": [
        "_common-reset"
      ],
      "statements": [
        {
          "condition": {
            "is": "BOOLEAN",
            "value": "true"
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "setup"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "runs"
            }
          ]
        }
      ]
    }
